    <script>
        function checkRugRisk() {
            let address = document.getElementById("contractAddress").value;
            let resultText = document.getElementById("result");

            if (!address) {
                resultText.innerHTML = "⚠️ Please enter a contract address.";
                return;
            }
            
            resultText.innerHTML = "🔍 Scanning contract... Please wait.";

            // Simulating AI scan with a random risk score
            setTimeout(() => {
                let risk = Math.floor(Math.random() * 100) + 1; // Randomized risk score
                resultText.innerHTML = `🚨 Rug Risk: ${risk}% 🚨`;
            }, 2000);
        }
    </script>
